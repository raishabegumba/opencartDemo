<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

  <Properties>
    <!-- Define base directory for logs -->
    <Property name="baseDir">logs</Property>

    <!-- Dynamic log file name based on test execution with timestamp -->
    <Property name="logFileName">${date:yyyy-MM-dd_HH-mm-ss}</Property> <!-- This uses the current timestamp -->
  </Properties>

  <Appenders>
    
    <!-- Console appender for logs -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
    <!-- File appender that writes to dynamic log file with timestamp -->
    <File name="DynamicLogFile" fileName="${baseDir}/log_${logFileName}.log">
      <PatternLayout>
        <Pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %-5p %c{2} [%t] - %m%n</Pattern>
      </PatternLayout>
    </File>

  </Appenders>

  <Loggers>
    
    <!-- Specific logger for your application -->
    <Logger name="com.yourcompany" level="debug" additivity="false">
      <AppenderRef ref="DynamicLogFile"/>
      <AppenderRef ref="Console"/>
    </Logger>

    <!-- Root logger configuration -->
    <Root level="info">
      <AppenderRef ref="DynamicLogFile"/>
      <AppenderRef ref="Console"/>
    </Root>

  </Loggers>
</Configuration>
